<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= Time.now.strftime("%d of %B, %Y") %>
<% end %>

<div class="columns mt-6 is-centered mr-4 ml-4">
  <div class="column is-two-fifths">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>
      <div class="panel-block">
        Calories: <%= @entry.calories %>Kcal
      </div>
      <div class="panel-block">
        Proteins: <%= @entry.proteins %>g</span>
      </div>
      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>g
      </div>
      <div class="panel-block">
        Fats: <%= @entry.fats %>g
      </div>
    </nav>
    <div class="columns is-mobile">
      <div class="column is-two-thirds">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "Delete", entry_path(@entry), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "button is-gray" %>
      </div>
      <div class="column">
      </div>
    </div>
  </div>
</div>

